
@model IEnumerable<MeteoMeter.Backend.DataModels.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Group Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
				<th>
            @Html.DisplayNameFor(m => m.Id)
        </th>
				<th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
				<th>
            @Html.DisplayNameFor(m => m.GroupDepartment)
        </th>
				<th>
            @Html.DisplayNameFor(m => m.City)
        </th>
				<th>
            @Html.DisplayNameFor(m => m.CreationDate)
        </th>
				<th>
            @Html.DisplayNameFor(m => m.Country)
        </th>
		        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
				<th>
            @Html.DisplayFor(modelItem => item.Id)
        </th>
				<th>
            @Html.DisplayFor(modelItem => item.Name)
        </th>
				<th>
            @Html.DisplayFor(modelItem => item.GroupDepartment)
        </th>
				<th>
            @Html.DisplayFor(modelItem => item.City)
        </th>
				<th>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </th>
				<th>
            @Html.DisplayFor(modelItem => item.Country)
        </th>
		        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
